    hLine1.BorderSizePixel = 0
    hLine1.ZIndex = 70
    hLine1.Parent = Layout.MainFrame

    local hLine2 = Instance.new("Frame")
    hLine2.Size = UDim2.new(1, -190, 0, 1)
    hLine2.Position = UDim2.new(0, 190, 0, 295)
    hLine2.BackgroundColor3 = THEME.Line
