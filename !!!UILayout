    local ASSETS = Layout.Theme.Assets

    Layout.Sidebar = Instance.new("Frame")
    Layout.Sidebar.Name = "Sidebar"
    Layout.Sidebar.Size = UDim2.new(0, 180, 1, 0)
    Layout.Sidebar.BackgroundTransparency = 1
