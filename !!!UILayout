    contentLayout.SortOrder = Enum.SortOrder.LayoutOrder
    contentLayout.Padding = UDim.new(0, 15)
    contentLayout.Parent = Layout.ContentScroll
end

function Layout.PlayTitleAnimation()
    Layout.ContentUnderline.Size = UDim2.new(0, 0, 0, 2)
    Layout.ContentUnderline.BackgroundTransparency = 0

    tween(Layout.ContentUnderline, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        Size = UDim2.new(1, 0, 0, 2)
    })

    Layout.ContentCursor.Visible = true
    Layout.ContentCursor.BackgroundTransparency = 0

    local textWidth = Layout.ContentTitle.TextBounds and Layout.ContentTitle.TextBounds.X or 80
    Layout.ContentCursor.Position = UDim2.new(0, textWidth + 4, 0.5, -12)

    task.spawn(function()
        for i = 1, 3 do
            Layout.ContentCursor.BackgroundTransparency = 0
            task.wait(0.08)
            Layout.ContentCursor.BackgroundTransparency = 1
            task.wait(0.08)
        end
        Layout.ContentCursor.Visible = false

        task.wait(0.02)
        tween(Layout.ContentUnderline, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {
            BackgroundTransparency = 1
        })
    end)
end

